{
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",
        "declaration": true,
        "target": "ES6",
        "outDir": "dist",
        "lib": ["ES6", "DOM"],
        "jsx": "preserve",
        "skipDefaultLibCheck": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "plugins": [
            {
              "name": "ts-lit-plugin",
              "strict": true
            }
          ]
    },
    "exclude": [
        "node_modules",
        "src/test-utils/**",
        "src/**/*.test.ts",
        "src/**/*.stories.ts",
        "src/**/*.mocks.ts"
    ],
    "include": [
        "src/**/*"
    ],
}